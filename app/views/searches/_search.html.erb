<h3>Get tickets for your next race</h3>
<p class="lead">
  Filter your results by location:
</p>
  <%= form_for(@search, remote: true) do |f| %>
    <%= f.select(:location_id, grouped_options_for_select(grouped_options, nil, {prompt: true})) %>
    <%= f.hidden_field :event_brand_id, value: @search.event_brand_id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= submit_tag "Filter by location", class: 'btn btn-primary btn-sm', id: 'search-button' %>
  <% end %>
  <small><%= link_to 'Clear', '/', id: 'clear' %></small>

<hr class="my-4">

<div class="row">
  <div class="col-md-12">
    <p>
      <small>Showing <%= "#{@search.events.count} #{@search.event_brand.name}" %> events:</small>
    </p>
  </div>
</div>

<div class="row">
  <% @search.events.each do |event| %>
    <%= render 'event', event: event %>
  <% end %>
</div>
